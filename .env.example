# AI Video Tool Environment Variables
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=AI Video Tool
DEBUG=False
SECRET_KEY=your-very-secret-key-change-this-in-production-at-least-32-chars

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Configuration
# For PostgreSQL (production)
DATABASE_URL=postgresql+asyncpg://postgres:your-secure-password@db:5432/ai_video_tool
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=ai_video_tool

# For SQLite (development only)
# DATABASE_URL=sqlite+aiosqlite:///./ai_video_tool.db

# Redis Configuration
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_PASSWORD=your-redis-password

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# File Storage Settings
MAX_UPLOAD_SIZE=524288000  # 500MB in bytes
FILE_RETENTION_DAYS=7

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com

# AWS S3 Configuration (optional, for cloud storage)
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=ai-video-tool-uploads

# CDN Configuration (optional)
CDN_URL=https://cdn.yourdomain.com

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Worker Settings
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# SSL/Domain Settings (for production)
DOMAIN_NAME=yourdomain.com
LETSENCRYPT_EMAIL=admin@yourdomain.com
